@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="CRUDCtrl">

    <div class="row" ng-show="personForm" id="PersonForm">
        <div class="col-md-4 col-md-offset-4">
            <form role="form">

                <h3 style="margin-bottom: 25px; text-align: center;">{{Action}} Person</h3>
                <div class="form-group">
                    <input type="text" class="form-control" id="PersonId" name="PersonId" placeholder="Id" ng-model="PersonId" disabled="disabled">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="First Name" ng-model="FirstName" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Last Name" ng-model="LastName" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Phone Number" ng-model="PhoneNumber" required>
                </div>

                <div class="form-group">
                    <label><input type="checkbox" id="IsActive" name="IsActive" ng-model="IsActive"> Is Active?</label>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="textarea" id="Address" placeholder="Address" maxlength="140" rows="7" ng-model="Address"></textarea>
                </div>
                <div class="btn-group pull-right">
                    <button type="submit" class="btn btn-primary" ng-click="AddUpdateperson()">Save Person</button>
                    <button type="button" class="btn btn-danger" ng-click="Cancel()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div class="personList">

        <table class="table table-hover">
            <tr>
                <td>Id</td>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Phone Number</td>
                <td>Is Active?</td>
                <td>Address</td>
                <td>Action</td>
            </tr>

            <tr ng-repeat="person in persons">
                <td>{{person.PersonId}}</td>
                <td>{{person.FirstName}}</td>
                <td>{{person.LastName}}</td>
                <td>{{person.PhoneNumber}}</td>
                <td>{{person.IsActive}}</td>
                <td>{{person.Address}}</td>
                <td>
                    <button ng-click="editPerson(person)" class="btn btn-primary">Edit</button>
                    <button ng-click="deletePerson(person)" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        </table>
        <button ng-click="AddPersonButton()" class="btn btn-default">Add Person</button>
    </div>

    <div style="visibility: hidden">
        <div class="md-dialog-container" id="myStaticDialog">
            <md-dialog>
                This is a pre-rendered dialog.
            </md-dialog>
        </div>
    </div>
</div>